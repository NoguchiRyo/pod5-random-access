# Include all CMake files
include CMakeLists.txt
include CMakePresets.json
include vcpkg.json
include vcpkg-configuration.json
recursive-include src *.cpp *.hpp *.h *.c
recursive-include src/include *
recursive-include extern *
include uv.lock

# Exclude unnecessary files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .git*
global-exclude build
global-exclude dist
global-exclude .venv